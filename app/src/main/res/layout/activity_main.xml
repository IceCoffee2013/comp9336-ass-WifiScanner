<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ass.wifiscaner.MainActivity">

    <Button
        android:id="@+id/scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        tools:layout_editor_absoluteY="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="-1dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/wifiInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="13dp"
        android:text="Loading"
        app:layout_constraintBottom_toTopOf="@+id/wifiList"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="info"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintLeft_toRightOf="@+id/scan"
        app:layout_constraintRight_toLeftOf="@+id/apState"
        tools:layout_editor_absoluteY="5dp" />

    <ListView
        android:id="@+id/wifiList"
        android:layout_width="346dp"
        android:layout_height="400dp"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/scan"
        tools:layout_editor_absoluteX="7dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="ToggleButton"
        android:textOff="OFF"
        android:textOn="ON"
        app:layout_constraintLeft_toRightOf="@+id/info"
        tools:layout_editor_absoluteY="5dp" />

</android.support.constraint.ConstraintLayout>
